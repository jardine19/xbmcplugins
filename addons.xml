<addon id="plugin.video.eetv"
       name="EE TV"
       version="1.0.0"
       provider-name="kevjs1982">
    <requires>
        <!--<import addon="xbmc.python" version="2.14.0"/>-->
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary>Watch EE TV</summary>
        <description>This XBMC plugin enables the playing of TV catchup content from an EE TV STB.</description>
